<div class="container">
  <div class="row">
    <div class="col-12 m-4 text-center">
      <h4 class="font-weight-bold">ショップ一覧</h4>
    </div>
    <div class="col-12 pb-3">
      <%=link_to "ショップを追加する", new_admin_shop_path, class: "btn btn-warning rounded-pill" %>
    </div>
      <div class="flash"><%= flash[:notice] %></div>

      <table class='table table-inverse text-center'>
        <thead>
          <tr>
            <th>ショップID</th>
            <th>ショップ名</th>
            <th>住所</th>
            <th>電話番号</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @shops.each do |shop| %>
            <tr>
              <td><%= shop.id %></td>
              <td><%= shop.name %></td>
              <td>
                〒<%= shop.postal_code %><br>
                <%= shop.prefecture %><%= shop.address %>
              </td>
              <td><%= shop.phone_number%></td>
              <td>
                <%= link_to "編集する", edit_admin_shop_path(shop.id), class: "btn btn-outline-primary" %>
                <%= link_to "削除する", admin_shop_path(shop.id), data: {confirm: "本当に消しますか？"}, class: "btn btn-outline-danger", method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>

        <div class="d-flex justify-content-center">
          <%= paginate @shops %>
        </div>

      </table>
  </div>
</div>
