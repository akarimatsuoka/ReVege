<div class='container py-5'>
  <div class="row">
    <div class="col mt-3 text-center">
       <h4 class="font-weight-bold">商品詳細</h4>
    </div>
  </div>

  <% if @shop.errors.any? %>
    <%= @shop.errors.count %>件のエラーが発生しました
    <ul>
      <% @shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="row d-flex justify-content-center">
  <%= form_with model: @shop, url: admin_shop_path, method: :patch do |f| %>
    <div class"col-md-6">
      <table class="table text-center">
        <tbody>
            <tr>
              <th><%= f.label "ショップ画像" %></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>

            <tr>
              <th><%= f.label "ショップ名"%></th>
              <td><%= f.text_field :name %></td>
             </tr>

            <tr>
              <th><%= f.label "ショップ紹介"%></th>
              <td><%= f.text_area :introduction %></td>
            </tr>

            <tr>
              <th><%= f.label "郵便番号" %></th>
               <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <th><%= f.label "都道府県" %></th>
              <td><%= f.collection_select :prefecture, JpPrefecture::Prefecture.all, :name, :name, { include_blank: 'ショップの所在地' } %></td>
            </tr>

            <tr>
              <th><%=f.label:"住所" %></th>
              <td><%= f.text_field :address %></td>
            </tr>

            <tr>
              <th><%=f.label:"電話番号" %></th>
              <td><%= f.text_field :phone_number %></td>
            </tr>
        </tbody>
      </table>
    </div>

    <div class="row pb-5 d-flex justify-content-center">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>