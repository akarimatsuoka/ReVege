<div class='container py-5'>
    <div class="row">
       <h4 class="col mt-3 text-center font-weight-bold">商品詳細</h4>
    </div>
      <% if @shop.errors.any? %>
         <%= @shop.errors.count %>件のエラーが発生しました
        <ul>
         <% @shop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
      <% end %>
</div>

<div class="row d-flex justify-content-center">
   <div class"col-md-6">
      <table class="table text-center">
        <%= form_with model: @shop, url: admin_shop_path, method: :patch do |f| %>
        <tbody>
            <tr>
              <th><%= f.label "ショップ画像" %></th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>

            <tr>
              <th><%= f.label "ショップ名"%></th>
              <td><%= f.text_field :name %></td>
             </tr>

            <tr>
              <th><%= f.label "ショップ紹介"%></th>
              <td><%= f.text_area :introduction %></td>
            </tr>

            <tr>
              <th><%= f.label "郵便番号" %></th>
               <td><%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <th><%= f.label "都道府県" %></th>
              <td><%=f.select :prefecture, options_from_collection_for_select(Shop.prefecture_i18n_names, :last, :first) %></td>
            </tr>

            <tr>
              <th><%=f.label:"住所" %></th>
              <td><%= f.text_field :address %></td>
            </tr>
            
            <tr>
              <th><%=f.label:"電話番号" %></th>
              <td><%= f.text_field :phone_number %></td>
            </tr>
        </tbody>
      </table>
   </div>
</div>

    <div class="row pb-5 d-flex justify-content-center">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
        <% end %>
    </div>