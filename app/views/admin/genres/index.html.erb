<div class="container py-5">
  <div class="row">
    <h4 class="m-4 pb-3 text-center font-weight-bold">ジャンル登録 / 一覧</h4>
      <div class="col-12">
          <div class="flash text-center">
            <%= flash[:notice] %>
          </div>

          <% if @genre.errors.any? %>
            <%= @genre.errors.count %>件のエラーが発生しました
              <ul>
                <% @genre.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>
      </div>

  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
        <table class="table text-center">
          <tbody>
            <tr>
              <td>ジャンル名</td>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
   </div>
  </div>


  <div class="row d-flex justify-content-center">
    <div class="col-8">
    <table class="mt-5 table text-center">
        <% @genres.each do |genre| %>
          <tr>
            <th><%= genre.name %></th>
            <td>
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-outline-primary" %>
                <%= link_to "削除する", admin_genre_path(genre.id), class: "btn btn-outline-danger", method: :delete %>
            </td>
          </tr>
         <% end %>
     </table>
     </div>
    </div>
   </div>
