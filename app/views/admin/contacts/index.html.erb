<div class="container py-3">
  <div class="row">
    <div class="col text-center my-4">
      <h4><strong>お問い合わせ一覧</strong></h4>
    </div>
  </div>

  <table class="table table-bordered">
    <thead class="thead-dark text-center">
      <tr>
        <th></th>
        <th>件名</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>日時</th>
      </tr>
    </thead>

    <tbody class="text-center">
      <% @contacts.each do |contact| %>
        <tr>
          <td>
            <% unless contact.reply_id.blank? %>
              <%= link_to "Re: #{contact.reply_id}", admin_contact_path(contact.reply_id) %>
            <% else %>
              <%= contact.id %>
            <% end %>
          </td>
          <td><%= link_to contact.subject, admin_contact_path(contact.id) %></td>
          <td><%= contact.customer.name %></td>
          <td><%= contact.customer.email %></td>
          <td><%= contact.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @contacts %>
</div>