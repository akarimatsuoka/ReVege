<div class="container py-5">
  <div class="row">
      <h4 class="col mt-3 text-center font-weight-bold"><%= @customer.last_name %><%= @customer.first_name %>さんの会員編集</h4>
    </div>
  </div>
</div>

  <div class="row d-flex justify-content-center">
    <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <div class="col-md-12">
        <table class="table table-striped text-center">
   　      <tbody>
         　  <tr>
         　　   <th>会員ID</th>
         　　   <td><%= @customer.id %></td>
         　  </tr>

         　  <tr>
         　　   <th>氏名</th>
         　　   <td><%= f.text_field :last_name %>&nbsp;<%= f.text_field :first_name %></td>
            </tr>

         　  <tr>
         　　   <th>フリガナ</th>
         　　   <td><%= f.text_field :last_name_kana %>&nbsp;<%= f.text_field :first_name_kana %></td>
         　  </tr>

            <tr>
         　　   <th>郵便番号</th>
         　　   <td><%= f.text_field :postal_code %></td>
         　  </tr>

         　  <tr>
         　　   <th>住所</th>
              <td><%= f.text_field :address %></td>
            </tr>

            <tr>
              <th>電話番号</th>
              <td><%= f.text_field :phone_number %></td>
            </tr>

            <tr>
              <th>メールアドレス</th>
              <td><%= f.email_field :email %></td>
            </tr>

            <tr>
              <th>会員ステータス</th>
              <td>
                <%= f.radio_button :is_deleted, :true %>
                <%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
                <%= f.radio_button :is_deleted, :false %>
                <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="row pb-5 d-flex justify-content-center">
        <%= f.submit "変更を保存", class: "btn btn-success"%>
      </div>
    <% end %>
  </div>
