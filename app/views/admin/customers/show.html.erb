<div class="container pb-5">
  <div class="row">
    <div class="col-12 py-3 text-center ">
      <h4 class="m-4 font-weight-bold"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
    </div>

    <div class="col-8 d-flex mx-auto">
      <table class="table table-border text-center">
        <tbody>
          <tr>
            <th class="table-secondary">会員ID</th>
            <td><%= @customer.id %></td>
          </tr>

          <tr>
            <th class="table-secondary">氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>

          <tr>
            <th class="table-secondary">フリガナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <th class="table-secondary">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <th class="table-secondary">住所</th>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <th class="table-secondary">電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>

          <tr>
            <th class="table-secondary">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>

          <tr>
            <th class="table-secondary">会員ステータス</th>
            <td><strong>
             <% if @customer.is_deleted %>
              <div class="text-danger">退会済</div>
             <% else %>
              <div class="text-success">有効</div>
             <% end %>
             </strong></td>
          </tr>

          <tr>
            <th colspan="2", class="text-right"><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-outline-primary btn-sm" %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
