<div class="col-8 ml-2 ">
      <h5 class=" d-flex justify-content-between font-weight-bold">お気に入りショップ</h5>
    <table class='table table-inverse text-center', style="font-size: 15px;">
      <thead class="table-secondary">
        <tr>
          <th>ショップ</th>
          <th>住所</th>
          <th>電話番号</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% bookmark_shops.each do |shop| %>
          <tr>
            <td>
              <%= link_to shop_path(shop) do %>
                <%= image_tag shop.image, size: "50x50" %>&nbsp;<%= shop.name %>
              <% end %>
            </td>
            <td>
              〒<%= shop.postal_code %><br>
              <%= shop.prefecture %><%= shop.address %>
            </td>
            <td><%= shop.phone_number%></td>

          </tr>
        <% end %>
      </tbody>
    </table>
</div>