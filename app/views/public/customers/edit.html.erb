<div class="container my-3">
  <div class="row">
    <h4 class="col my-4 text-center font-weight-bold">マイページ編集</h4>
        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
  </div>

  <div class="row d-flex justify-content-center">
    <%= form_with model: @customer, url: information_path, method: :patch do |f| %>
      <table class="table table-striped text-center">
        <tr>
          <th>名前（姓名）</th>
          <td>
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.text_field :first_name %>
          </td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </td>
        </tr>

        <tr>
          <th><%= f.label "メールアドレス"%></th>
          <td><%= f.email_field :email %></td>
        </tr>

        <tr>
          <th><%= f.label "郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <th><%= f.label "住所" %></th>
          <td><%= f.text_field :address %></td>
        <tr>

        <tr>
          <th><%= f.label "電話番号" %></th>
          <td><%= f.text_field :phone_number %></td>
        </tr>

        <tr>
          <td><%= f.submit "編集内容を保存", class: "btn btn-success"%></td>
          <td><%= link_to "退会する", confirm_path, class: 'btn btn-danger'%></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>