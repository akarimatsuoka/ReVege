<div class="container py-5">
  <div class="row">
    <div class="col-md-12">
      <h3 class="m-4 font-weight-bold"><strong>配送先編集</strong></h3>
      <% if @shipping_address.errors.any? %>
        <%= @shipping_address.errors.count %>件のエラーが発生しました
        <ul>
          <% @shipping_address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <%= form_with model: @shipping_address, url: shipping_address_path, method: :patch do |f| %>
        <div class="-flex align-items-center" >
          <table class="table table-bordered" style="text-align:center">
            <tr>
              <th class="table-secondary"><%= f.label "郵便番号(ハイフンなし)" %></th>
              <td>〒<%= f.text_field :postal_code %></td>
            </tr>

            <tr>
              <th class="table-secondary"><%= f.label "住所" %></th>
              <td><%= f.text_field :address, size:"40x5" %></td>
            </tr>

            <tr>
              <th class="table-secondary"><%= f.label "宛名" %></th>
              <td><%= f.text_field :name %></td>
            </tr>
          </table>
        </div>

        <div class="col pt-3 d-flex justify-content-center">
          <%= f.submit "変更内容を保存する", class: 'btn btn-outline-dark rounded-0' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
