<table class="table table-bordered" style="text-align:center;">
  <thead>
    <tr align="center", style="background-color:#beca95;">
      <th scope="col">ジャンル検索</th>
    </tr>
  </thead>

  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name, items_path(genre_id: genre.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

