<div class="container">
  <div class="row">
    <h4 class="col mt-3 text-center font-weight-bold">ショッピングカート</h4>
  </div>

  <div class="row">
    <div class="col offset-10 mt-2 mb-1 ">
      <%= link_to "カートを空にする", destroy_all_path, class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>

    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr>
            <th>
              <%= image_tag cart_item.item.image, size: "100x100" %>
              <%= cart_item.item.name %>
            </th>
            <td style="align-items: center;"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
        　        <!--下記は個数の更新が行える記述-->
            <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item), methot: :patch do |f| %>
                <%=f.select :quantity,  [['1個',1], ['2個',2], ['3個',3], ['4個',4], ['5個',5], ['6個',6], ['7個',7], ['8個',8], ['9個',9], ['10個',10]], include_blank: "個数選択" %>
                <%= f.submit "変更",class: "btn btn-success" %>
                <% end %>
            </td>
            <!--下記は小計。subtotalはモデルに記述あり-->
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), class: "btn btn-outline-danger", method: :delete %></td>
          </tr>
        </tbody>
      <% end %>
    </table>

    <div class="row">
      <div class="col offset-2">
        <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
      </div>

      <div class="col text-light">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="row text-center">合計金額
                <% @cart_items.each do |cart_item| %>
                  <% @total += cart_item.subtotal %>
                <% end %>
              </th>
              <td style="font-size:24px;"><strong>￥<%= @total.to_s(:delimited) %></strong></td>
            </tr>
          </thead>
        </table>
      </div>
    </div>

    <div class="row pb-3 pl-5 ml-5 align-items-center">
      <div class="col offset-5">
        <% if @cart_items.present? %>
          <%= link_to "情報入力に進む", root_path, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
</div>